<center>
  <h1><u>Book Index Page</u></h1>
  <% @books.each do |book| %>
    <section id="book-<%= book.id %>">
      <h2><%= book.title %></h2>
      <p>Number of Pages: <%= book.number_of_pages %></p>
      <p>Publication Year: <%= book.publication_year %></p>
      <p>Author(s):</p>
        <% book.authors.each do |author| %>
          <p><%= link_to("#{author.name}", "/authors/#{author.id}")  %></p>
        <% end %>
      <hr>
    </section>
  <% end %>
</center>
